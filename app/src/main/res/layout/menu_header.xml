<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="vertical">


        <com.projectname.comman.RoundedImageView
            android:id="@+id/menu_header_ivProfileRound"
            android:layout_width="@dimen/menu_header_image_width_hieght"
            android:layout_height="@dimen/menu_header_image_width_hieght"
            android:layout_centerVertical="true"
            android:src="@drawable/category_thumb_personel"/>


        <TextView
            android:id="@+id/menu_header_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/menu_header_ivProfileRound"
            android:layout_toRightOf="@+id/menu_header_ivProfileRound"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/padding_10"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16sp"/>


    </RelativeLayout>


</FrameLayout>