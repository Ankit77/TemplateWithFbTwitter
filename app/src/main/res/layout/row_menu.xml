<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row_menu_llitems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/row_menu_ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_5dp"
            android:padding="@dimen/menu_row_padding"/>

        <TextView
            android:id="@+id/row_menu_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left_10dp"
            android:layout_weight="1"
            android:textColor="@color/menu_text_selector"
            android:textSize="14sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_left_20dp"
        android:background="@color/menu_section_color"/>

    <LinearLayout
        android:id="@+id/row_menu_llSection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_section_hieght"
        android:background="@color/menu_section_color"
        android:orientation="horizontal"/>


</LinearLayout>